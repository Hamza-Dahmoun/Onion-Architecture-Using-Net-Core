@model CompanyName.AppName.Domain.Entities.State

@{
    ViewData["Title"] = labelLocalizer["Delete"];
}

<h1>@labelLocalizer["Delete"]</h1>

<h3>@labelLocalizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@labelLocalizer["State"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@labelLocalizer["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@labelLocalizer["Back to List"]</a>
    </form>
</div>
